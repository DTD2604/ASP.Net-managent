@model StudentManager.Data.Account

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //var name = ViewBag.Name;
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Course</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
        <hr />
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Detail</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <tbody>
                                    <tr class="container text-center">
                                        <td class="table-gray col-md-3">
                                            <strong>
                                                @Html.DisplayNameFor(model => model.User.FullName)
                                            </strong>
                                        </td>
                                        <td class="col-md-6">
                                            <span>
                                                @Html.DisplayFor(model => model.User.FullName)
                                            </span>
                                        </td>
                                    </tr>
                                    <tr class="container text-center">
                                        <td class="table-gray">
                                            <strong>
                                                @Html.DisplayNameFor(model => model.Username)
                                            </strong>
                                        </td>
                                        <td class="">
                                            <span>
                                                @Html.DisplayFor(model => model.Username)
                                            </span>
                                        </td>
                                    </tr>
                                    <tr class="container text-center">
                                        <td class="table-gray">
                                            <strong>
                                                @Html.DisplayNameFor(model => model.User.Birthday)
                                            </strong>
                                        </td>
                                        <td class="">
                                            <span>
                                                @Html.DisplayFor(model => model.User.Birthday)
                                            </span>
                                        </td>
                                    </tr>
                                    <tr class="container text-center">
                                        <td class="table-gray">
                                            <strong>
                                                @Html.DisplayNameFor(model => model.User.Status)
                                            </strong>
                                        </td>
                                        <td class="">
                                            <span>
                                                @{
                                                    if (Model.Status == 1)
                                                    {
                                                        <span>Active</span>
                                                    }
                                                    else
                                                    {
                                                        <span>Deactive</span>
                                                    }
                                                }
                                            </span>
                                        </td>
                                    </tr>
                                    <tr class="container text-center">
                                        <td class="table-gray">
                                            <strong>
                                                @Html.DisplayNameFor(model => model.User.Address)
                                            </strong>
                                        </td>
                                        <td class="">
                                            <span>
                                                @Html.DisplayFor(model => model.User.Address)
                                            </span>
                                        </td>
                                    </tr>
                                    <tr class="container text-center">
                                        <td class="table-gray">
                                            <strong>
                                                @Html.DisplayNameFor(model => model.User.Gender)
                                            </strong>
                                        </td>
                                        <td class="">
                                            <span>
                                                @{
                                                    if (Model.User.Gender == 1)
                                                    {
                                                        <span>Man</span>
                                                    }
                                                    else if(Model.User.Gender == 2)
                                                    {
                                                        <span>Woman</span>
                                                    }
                                                    else
                                                    {
                                                        <span>Other</span>
                                                    }
                                                }
                                            </span>
                                        </td>
                                    </tr>
                                    <tr class="container text-center">
                                        <td class="table-gray">
                                            <strong>
                                                @Html.DisplayNameFor(model => model.User.Avatar)
                                            </strong>
                                        </td>
                                        <td class="">
                                            <span>
                                                @Html.DisplayFor(model => model.User.Avatar)
                                            </span>
                                        </td>
                                    </tr>
                                    <tr class="container text-center">
                                        <td class="table-gray">
                                            <strong>
                                                @Html.DisplayNameFor(model => model.User.Email)
                                            </strong>
                                        </td>
                                        <td class="">
                                            <span>
                                                @Html.DisplayFor(model => model.User.Email)
                                            </span>
                                        </td>
                                    </tr>
                                    <tr class="container text-center">
                                        <td class="table-gray">
                                            <strong>
                                                @Html.DisplayNameFor(model => model.User.Phone)
                                            </strong>
                                        </td>
                                        <td class="">
                                            <span>
                                                @Html.DisplayFor(model => model.User.Phone)
                                            </span>
                                        </td>
                                    </tr>
                                    <tr class="container text-center">
                                        <td class="table-gray">
                                            <strong>
                                                @Html.DisplayNameFor(model => model.User.ExtraCode)
                                            </strong>
                                        </td>
                                        <td class="">
                                            <span>
                                                @Html.DisplayFor(model => model.User.ExtraCode)
                                            </span>
                                        </td>
                                    </tr>
                                    <tr class="container text-center">
                                        <td class="table-gray">
                                            <strong>
                                                @Html.DisplayNameFor(model => model.Role)
                                            </strong>
                                        </td>
                                        <td class="">
                                            <span>
                                                @Html.DisplayFor(model => model.Role.Name)
                                            </span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="row justify-content-start">
                            <div class="form-group">
                                <a asp-action="Index">Back to List</a>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
