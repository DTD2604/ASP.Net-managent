@model StudentManager.Data.Account

@{
    ViewData["Title"] = "Login";
    Layout ="~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="card-header text-center">
    <h1><b>Admin</b>LTE</h1>
</div>
<div class="card-body">
    <p class="login-box-msg">Sign in to start your session</p>

    <form asp-action="Index" method="post">
        <div class="input-group mb-3">
            <input type="text" asp-for="Username" class="form-control" placeholder="UserName">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-envelope"></span>
                </div>
            </div>
        </div>
        <div class="input-group mb-3">
            <input type="password" asp-for="Password" class="form-control" placeholder="Password">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="icheck-primary">
                    <input type="checkbox" id="remember">
                    <label for="remember">
                        Remember Me
                    </label>
                </div>
            </div>
            <!-- /.col -->
            <div class="col-4">
                <button type="submit" class="btn btn-primary btn-block">Sign In</button>
            </div>
            <!-- /.col -->
        </div>
    </form>

    <div class="social-auth-links text-center mt-2 mb-3">
        <a href="#" class="btn btn-block btn-primary">
            <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
        </a>
        <a href="#" class="btn btn-block btn-danger">
            <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
        </a>
    </div>
    <!-- /.social-auth-links -->

    <p class="mb-1">
        <a asp-action="ForgotPassword">I forgot my password</a>
    </p>
    <p class="mb-0">
        <a asp-action="Register" class="text-center">Register a new membership</a>
    </p>
</div>
<!-- /.card-body -->
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}