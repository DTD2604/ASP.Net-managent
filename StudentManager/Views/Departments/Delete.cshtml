@model StudentManager.Data.Department

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var fullname = ViewBag.FullName;
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Departments</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
        <hr />
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Delete</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="row justify-content- bettwen">
                            <p>Are you sure you want to delete this?</p>
                        </div>
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <tr>
                                    <th class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <td class="col-sm-12">
                                        @Html.DisplayFor(model => model.Name)
                                    </td>
                                </tr>
                                <tr>
                                    <th class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.Leader)
                                    </th>

                                    <td class="col-sm-10">
                                        <span>@fullname</span>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.Slug)
                                    </th>
                                    <td class="col-sm-10">
                                        @Html.DisplayFor(model => model.Slug)
                                    </td>
                                </tr>
                                <tr>
                                    <th class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.DateBeginning)
                                    </th>
                                    <td class="col-sm-10">
                                        @Html.DisplayFor(model => model.DateBeginning)
                                    </td>
                                </tr>
                                <tr>
                                    <th class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>
                                    <td class="col-sm-10">
                                        @{
                                            if (Model.Status == 1)
                                            {
                                                <span>Active</span>
                                            }
                                            else
                                            {
                                                <span>Deactive</span>
                                            }
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.Logo)
                                    </th>
                                    <td class="col-sm-10">
                                        @Html.DisplayFor(model => model.Logo)
                                    </td>
                                </tr>

                            </table>
                        </div>
                        <!-- /.card-body -->
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-danger" /> |
                            <a asp-action="Index">Back to List</a>
                        </form>
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
